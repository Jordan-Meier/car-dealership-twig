<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Places you've been</title>
    </head>
    <body>
        <h1>List of Cars at Dealership</h1>
        {% if cars is not empty %}
            <ul>
                {% for car in cars %}
                <div class="row">
                    <div class='col-md-6'>
                        <h2> {{ car.getModel }}</h2>
                    </div>
                    <div class='col-md-6'>
                        <p> {{ car.getPrice }}</p>
                        <p> {{ car.getMiles }}</p>
                        <img src= "{{ car.getPhoto }}">
                    </div>
                </div>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="/delete_all" method='post'>
            <button class="btn btn-danger" type="submit">Delete All</button>
        </form>
    </body>
</html>
