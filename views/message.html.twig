{% if message %}
    <div class="alert alert-{{ message.type }}" role="alert">{{ message.text }}</div>

    <div class="row">
        <div class='col-md-4'>
            <form action='/car_browse'>
                <button type="submit" class="btn-info">Browse Cars</button>
            </form>
        </div>
        <div class='col-md-4'>
            <form action='/car_form'>
                <button type="submit" class="btn-info">Search Cars</button>
            </form>
        </div>
        <div class='col-md-4'>
            <form action='/car_sell'>
                <button type="submit" class="btn-info">Sell a Car</button>
            </form>
        </div>
    </div>
{% endif %}
